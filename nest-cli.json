{
    "$schema": "https://json.schemastore.org/nest-cli",
    "collection": "@nestjs/schematics",
    "sourceRoot": "apps/notification-api/src",
    "compilerOptions": {
        "builder": "swc",
        "deleteOutDir": true,
        "webpack": true,
        "tsConfigPath": "apps/notification-api/tsconfig.app.json",
        "typeCheck": true
    },
    "projects": {
        "notification-api": {
            "type": "application",
            "root": "apps/notification-api",
            "entryFile": "main",
            "sourceRoot": "apps/notification-api/src",
            "compilerOptions": {
                "builder": "swc",
                "tsConfigPath": "apps/notification-api/tsconfig.app.json",
                "typeCheck": true
            }
        },
        "worker-service": {
            "type": "application",
            "root": "apps/worker-service",
            "entryFile": "main",
            "sourceRoot": "apps/worker-service/src",
            "compilerOptions": {
                "builder": "swc",
                "tsConfigPath": "apps/worker-service/tsconfig.app.json",
                "assets": ["template/*.hbs"],
                "watchAssets": true,
                "typeCheck": true
            }
        },
        "cns": {
            "type": "application",
            "root": "apps/cns",
            "entryFile": "main",
            "sourceRoot": "apps/cns/src",
            "compilerOptions": {
                "builder": "swc",
                "tsConfigPath": "apps/cns/tsconfig.app.json",
                "typeCheck": true
            }
        },
        "dlx-notification-api": {
            "type": "application",
            "root": "apps/dlx-notification-api",
            "entryFile": "main",
            "sourceRoot": "apps/dlx-notification-api/src",
            "compilerOptions": {
                "builder": "swc",
                "tsConfigPath": "apps/dlx-notification-api/tsconfig.app.json",
                "typeCheck": true
            }
        },
        "common": {
            "type": "library",
            "root": "libs/common",
            "entryFile": "index",
            "sourceRoot": "libs/common/src",
            "compilerOptions": {
                "builder": "swc",
                "tsConfigPath": "libs/common/tsconfig.lib.json",
                "assets": ["keys/*.pem"],
                "watchAssets": true,
                "typeCheck": true
            }
        },
        "auth": {
            "type": "library",
            "root": "libs/auth",
            "entryFile": "index",
            "sourceRoot": "libs/auth/src",
            "compilerOptions": {
                "builder": "swc",
                "tsConfigPath": "libs/auth/tsconfig.lib.json",
                "typeCheck": true
            }
        },
        "config": {
            "type": "library",
            "root": "libs/config",
            "entryFile": "index",
            "sourceRoot": "libs/config/src",
            "compilerOptions": {
                "builder": "swc",
                "tsConfigPath": "libs/config/tsconfig.lib.json",
                "typeCheck": true
            }
        }
    },
    "monorepo": true,
    "root": "apps/notification-api"
}
