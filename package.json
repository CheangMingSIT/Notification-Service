{
    "name": "common-notification-services",
    "version": "1.0.0",
    "description": "CNS",
    "author": "Cheang Ming",
    "private": true,
    "license": "UNLICENSED",
    "scripts": {
        "build": "nest build",
        "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
        "start": "nest start swc --webpack --webpackPath webpack-hmr.config.js",
        "start:dev": "nest start -b swc --watch",
        "start:debug": "nest start --debug swc",
        "start:prod": "node dist/apps/notification-api/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "start:cns": "concurrently \"nest start -b swc cns-user --watch\" \"nest start -b swc cns-notification-record --watch\" \"nest start -b swc cns-microservices-monitoring --watch\"",
        "start:notification": "concurrently \"nest start -b swc notification-api --watch\" \"nest start -b swc worker-service --watch\" \"nest start -b swc dlx-notification-api --watch\"",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./apps/notification-services/test/jest-e2e.json"
    },
    "dependencies": {
        "@casl/ability": "^6.5.0",
        "@nestjs-modules/mailer": "^1.10.3",
        "@nestjs/axios": "^3.0.1",
        "@nestjs/common": "^10.3.1",
        "@nestjs/config": "^3.1.1",
        "@nestjs/core": "^10.3.1",
        "@nestjs/jwt": "^10.2.0",
        "@nestjs/microservices": "^10.3.1",
        "@nestjs/mongoose": "^10.0.2",
        "@nestjs/passport": "^10.0.3",
        "@nestjs/platform-express": "^10.3.1",
        "@nestjs/schedule": "^4.0.0",
        "@nestjs/swagger": "^7.2.0",
        "@nestjs/terminus": "^10.2.1",
        "@nestjs/typeorm": "^10.0.1",
        "amqp-connection-manager": "4.1.14",
        "amqplib": "^0.10.3",
        "axios": "^1.6.7",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.1",
        "handlebars": "^4.7.8",
        "mongo-gridfs": "^1.1.0",
        "mongodb": "^6.3.0",
        "mongoose": "^8.1.1",
        "nest-casl": "^1.9.3",
        "nodemailer": "^6.9.8",
        "passport": "^0.7.0",
        "passport-headerapikey": "^1.2.2",
        "passport-jwt": "^4.0.1",
        "passport-local": "^1.0.0",
        "pg": "^8.11.3",
        "pug": "^3.0.2",
        "reflect-metadata": "^0.1.14",
        "rxjs": "^7.8.1",
        "typeorm": "^0.3.20",
        "uuid": "^9.0.1"
    },
    "devDependencies": {
        "@nestjs/cli": "^10.3.0",
        "@nestjs/schematics": "^10.1.0",
        "@nestjs/testing": "^10.3.1",
        "@swc/cli": "^0.1.65",
        "@swc/core": "^1.3.107",
        "@types/bcrypt": "^5.0.2",
        "@types/express": "^4.17.21",
        "@types/jest": "^29.5.11",
        "@types/multer": "^1.4.11",
        "@types/node": "^20.11.10",
        "@types/passport-jwt": "^3.0.13",
        "@types/passport-local": "^1.0.38",
        "@types/supertest": "^2.0.16",
        "@typescript-eslint/eslint-plugin": "^6.19.1",
        "@typescript-eslint/parser": "^6.19.1",
        "bcrypt": "^5.1.1",
        "concurrently": "^8.2.2",
        "eslint": "^8.56.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.1.3",
        "jest": "^29.7.0",
        "prettier": "^3.2.4",
        "run-script-webpack-plugin": "^0.2.0",
        "source-map-support": "^0.5.21",
        "supertest": "^6.3.4",
        "swc-loader": "^0.2.3",
        "ts-jest": "^29.1.2",
        "ts-loader": "^9.5.1",
        "ts-node": "^10.9.2",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.3.3",
        "webpack": "^5.90.0",
        "webpack-node-externals": "^3.0.0"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": ".",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "./coverage",
        "testEnvironment": "node",
        "roots": [
            "<rootDir>/libs/",
            "<rootDir>/apps/"
        ],
        "moduleNameMapper": {
            "^@app/common(|/.*)$": "<rootDir>/libs/common/src/$1",
            "^@app/auth(|/.*)$": "<rootDir>/libs/auth/src/$1",
            "^@app/config(|/.*)$": "<rootDir>/libs/config/src/$1"
        }
    }
}
